<%= render 'navigation' %>

<div class="d-flex">
  <%= render 'sidebar' %>

  <div class="main-content">
    <div class="row">
      <%= render 'layouts/messages' %>
      <h1>Chen Tapak Dam Dam</h1>

      <% @products.each do |product| %>
        <div class="col-md-4 my-3 ">
          <div class="card">
            <% if product.image.attached? %>
              <%= image_tag url_for(product.image), class: "card-img-top", alt: product.name, width: 200, height: 300 %>
            <% end %>

            <div class="card-body">
              <h5 class="card-title"><%= product.name %> $<%= product.price %></h5>
              <a href="<%= product_path(product) %>" class="btn btn-primary">Show</a>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="pag-bar d-flex justify-content-center mt-4">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
